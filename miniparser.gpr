project Miniparser is

   for Source_Dirs use ("src", "test");
   for Object_Dir use "obj";
   for Exec_Dir use "bin";
   for Main use ("test_lexer.adb", "test_ls.adb", "test_parser.adb", "test_all.adb");

   package Compiler is
      for Default_Switches ("Ada") use
        ("-g", "-gnatwa", "-gnata", "-gnatyM120");
   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-Es");
   end Binder;

end Miniparser;
